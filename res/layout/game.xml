<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:gravity="center_horizontal"
	android:background="@drawable/wallpaper">
	<TableLayout android:id="@+id/tableLayout1"
		android:layout_width="wrap_content" android:gravity="top"
		android:layout_height="wrap_content">
		<TableRow android:padding="20px">

		</TableRow>

		<TableRow>
			<ImageButton
				android:id="@+id/card_1"
				android:padding="6px"     
				android:layout_width="90dp" 
    			android:layout_height="120dp"></ImageButton>
			<ImageButton android:id="@+id/card_2"
				android:padding="6px"
				android:layout_width="90dp" 
    			android:layout_height="120dp"></ImageButton>
			<ImageButton android:id="@+id/card_3"
				android:padding="6px"
				android:layout_width="90dp" 
    			android:layout_height="120dp"></ImageButton>
			<ImageButton android:id="@+id/card_4"
				android:padding="6px"
				android:layout_width="90dp" 
    			android:layout_height="120dp"></ImageButton>
			<ImageButton android:id="@+id/card_5"
				android:padding="6px"
				android:layout_width="90dp" 
    			android:layout_height="120dp"></ImageButton>


		</TableRow>
	</TableLayout>


	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text=""
		android:padding="6px" />

	<TableLayout android:id="@+id/tableLayout2"
		android:gravity="bottom" android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<TableRow>
			<TextView android:layout_width="wrap_content" android:id="@+id/tickertape"
				android:layout_height="wrap_content" android:text="tickertape"
				android:padding="6px" android:gravity="bottom" android:layout_gravity="bottom"/>
		</TableRow>
	</TableLayout>


</LinearLayout>